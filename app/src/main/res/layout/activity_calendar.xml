<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalendarActivity">


    <ListView
        android:id="@+id/lv_eventList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_forSelDay"
        android:choiceMode="singleChoice"
        android:clickable="false"
        tools:listitem="@layout/event_layout" />

    <TextView
        android:id="@+id/tv_forSelDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:width="150dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="Events for:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_MP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_forSelDay"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_forSelDay"
        android:layout_toEndOf="@+id/tv_forSelDay"
        android:gravity="center_vertical|end"
        android:text="Selected Day"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
