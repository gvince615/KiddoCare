<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    custom:cardElevation="3dp"
    custom:cardCornerRadius="5dp"
    custom:cardBackgroundColor="@color/trans_white"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/logo_yellow_box">

        <LinearLayout
            android:padding="5dp"
            android:background="@color/logo_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical Data:"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/et_flu_shot_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Flu Shot Date:"/>

            <TextView
                android:id="@+id/et_flu_shot_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:hint="@string/hint_date"
                android:onClick="pickDate"
                android:textSize="18sp"
                android:gravity="end"
                android:layout_gravity="right" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/et_immunization_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Immunization Date:"/>

            <TextView
                android:id="@+id/et_immunization_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:hint="@string/hint_date"
                android:onClick="pickDate"
                android:textSize="18sp"
                android:gravity="end"
                android:layout_gravity="right" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="0dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/et_medication_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Medication Time:"/>

            <TextView
                android:id="@+id/et_medication_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:hint="@string/hint_time"
                android:onClick="pickTime"
                android:textSize="18sp"
                android:gravity="end"
                android:layout_gravity="right" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.quickenloans.floatui.QLFloatingEditLayout
                android:id="@+id/et_medicine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                custom:qlfel_helperText="Enter the child's medication"
                custom:qlfel_hintText="Child's Medication"
                custom:qlfel_inputType="medication_name"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>