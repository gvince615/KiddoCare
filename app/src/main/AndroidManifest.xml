<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vintek_ss.vince.kiddocare">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme"
        android:versionCode="10"
        android:versionName="2.0.0">
        <activity
            android:name=".UserSettingActivity"
            android:parentActivityName=".KiddoCareMainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vintek_ss.vince.kiddocare.KiddoCareMainActivity" />
        </activity>
        <activity
            android:name=".AttendanceActivity"
            android:label="@string/title_activity_attendance"
            android:parentActivityName=".KiddoCareMainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vintek_ss.vince.kiddocare.KiddoCareMainActivity" />
        </activity>

        <activity
            android:name=".BillingActivity"
            android:label="@string/title_activity_billing"
            android:parentActivityName=".KiddoCareMainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vintek_ss.vince.kiddocare.KiddoCareMainActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="About KiddoCare"
            android:parentActivityName=".KiddoCareMainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vintek_ss.vince.kiddocare.KiddoCareMainActivity" />
        </activity>
        <activity
            android:name=".RegisteredListScrollingActivity"
            android:label="@string/title_activity_registered"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vintek_ss.vince.kiddocare.KiddoCareMainActivity" />
        </activity>
        <activity
            android:name=".RegistrationListScrollingActivity"
            android:label="@string/title_activity_reg_edit_review_scrolling"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vintek_ss.vince.kiddocare.KiddoCareMainActivity" />
        </activity>
        <activity
            android:name=".KiddoCareMainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>