<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    custom:cardElevation="3dp"
    custom:cardCornerRadius="5dp"
    android:id="@+id/medicalDataCardView"
    custom:cardBackgroundColor="@color/trans_white"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/logo_yellow_box">

        <LinearLayout
            android:padding="5dp"
            android:background="@color/logo_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical Data:"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/et_flu_shot_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Flu Shot Date:"/>

            <TextView
                android:id="@+id/et_flu_shot_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:hint="@string/hint_date"
                android:onClick="pickDate"
                android:textSize="18sp"
                android:gravity="end"
                android:layout_gravity="right" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/et_immunization_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Immunization Date:"/>

            <TextView
                android:id="@+id/et_immunization_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:hint="@string/hint_date"
                android:onClick="pickDate"
                android:textSize="18sp"
                android:gravity="end"
                android:layout_gravity="right" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera"/>
            <ImageView
                android:id="@+id/iv_shot_record"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher_new"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>