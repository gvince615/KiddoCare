<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/validationContainer"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="-20dp"
    android:animateLayoutChanges="true"
    android:focusable="true"
    android:orientation="vertical"
    android:textIsSelectable="true">

    <TextView
        android:id="@+id/upperFieldNameLabel"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:text="floating label"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:visibility="visible" />

    <com.quickenloans.pex.util.ValidationFormField
        android:id="@+id/fieldValue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/upperFieldNameLabel"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="hint text"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/medium_gray"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/fieldErrorLabel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/fieldValue"
        android:layout_marginLeft="8dp"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_small"
        android:visibility="invisible" />

</RelativeLayout><!-- From: file:/Users/gvincent/Documents/studioprojects/KiddoCare/app/src/main/res/layout/validation_form_field.xml -->